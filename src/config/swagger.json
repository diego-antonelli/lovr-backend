{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/api/v1",
  "schemes": ["http"],
  "produces": ["application/json"],
  "paths": {
    "/login": {
      "post": {
        "tags": ["Login"],
        "summary": "Login using email and password",
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not found"
          },
          "500": {
            "description": "Database error"
          }
        },
        "content": {
          "application/json": {}
        },
        "parameters": [
          {
            "name": "loginRequest",
            "in": "body",
            "description": "Specifies the login request",
            "required": true,
            "schema": {
              "description": "Login Request",
              "example": {
                "email": "diego@lovr.site",
                "password": "123456"
              },
              "items": {
                "email": "string",
                "password": "string"
              },
              "maxItems": 1,
              "minItems": 1
            }
          }
        ]
      }
    },
    "/profile/all": {
      "get": {
        "tags": ["Profile"],
        "summary": "Obtain all the profiles around according to a specific profile and preferences",
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "content": {
          "application/json": {}
        },
        "parameters": [
          {
            "name": "lovr-api-key",
            "in": "header",
            "description": "Lovr API Key",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ]
      }
    },
    "/profile/update-location": {
      "post": {
        "tags": ["Profile"],
        "summary": "Update the location of the current user",
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "content": {
          "application/json": {}
        },
        "parameters": [
          {
            "name": "lovr-api-key",
            "in": "header",
            "description": "Lovr API Key",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "body",
            "in": "body",
            "description": "Specifies the update location body",
            "required": true,
            "schema": {
              "description": "Update Location Request",
              "example": {
                "latitude": "1.2345",
                "longitude": "1.2345",
                "uuid": "123456789",
                "locale": "en_US",
                "os": "iOS",
                "version": "13.0",
                "deviceType": "iPhone"
              },
              "items": {
                "latitude": "number",
                "longitude": "number",
                "uuid": "string",
                "locale": "string",
                "os": "string",
                "version": "string",
                "deviceType": "string",
                "altitude": "number",
                "accuracy": "number"
              },
              "maxItems": 1,
              "minItems": 1
            }
          }
        ]
      }
    }
  }
}