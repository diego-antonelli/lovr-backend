{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/api/v1",
  "schemes": ["http"],
  "produces": ["application/json"],
  "paths": {
    "/login": {
      "post": {
        "tags": ["Login"],
        "summary": "Login using email and password",
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not found"
          },
          "500": {
            "description": "Database error"
          }
        },
        "content": {
          "application/json": {}
        },
        "parameters": [
          {
            "name": "loginRequest",
            "in": "body",
            "description": "Specifies the login request",
            "required": true,
            "schema": {
              "description": "Login Request",
              "example": {
                "email": "diego@lovr.site",
                "password": "123456"
              },
              "items": {
                "email": "string",
                "password": "string"
              },
              "maxItems": 1,
              "minItems": 1
            }
          }
        ]
      }
    }
  }
}